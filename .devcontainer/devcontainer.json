{
    "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true
        },
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "installBicep": true
        },
        "ghcr.io/azure/azure-dev/azd:0": {},
        "ghcr.io/devcontainers/features/powershell:1": {},
        "ghcr.io/devcontainers/features/github-cli": {},
        "ghcr.io/devcontainers/features/python": {},
        "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {},
        "ghcr.io/devcontainers/features/docker-in-docker": {},
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.stickyScroll.defaultModel": "outlineModel",
                "editor.stickyScroll.enabled": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit",
                    "source.organizeImports": "explicit"
                }
            },
            "extensions": [
                "eamodio.gitlens",
                "EditorConfig.EditorConfig",
                "foxundermoon.shell-format",
                "GitHub.copilot-chat",
                "mhutchie.git-graph",
                "ms-azuretools.azure-dev",
                "ms-azuretools.vscode-bicep",
                "ms-azuretools.vscode-docker",
                "ms-vscode.powershell",
                "redhat.vscode-yaml",
                "yzhang.markdown-all-in-one",
            ]
        }
    },
    "hostRequirements": {
        "gpu": "optional"
    },
    "onCreateCommand": "bash ./.devcontainer/onCreateCommand.sh",
    "postCreateCommand": "bash ./.devcontainer/postCreateCommand.sh",
    "postStartCommand": "bash ./.devcontainer/postStartCommand.sh",
    "runArgs": [
        "--env-file",
        ".devcontainer/devcontainer.env"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/dummyOne/schultz-tables,type=bind",
    "workspaceFolder": "/workspace/dummyOne/schultz-tables",
    "mounts": [
        {
            "source": "${localWorkspaceFolder}/../shared-resources",
            "target": "/workspace/dummyOne/shared-resources",
            "type": "bind",
        }
    ]
}
