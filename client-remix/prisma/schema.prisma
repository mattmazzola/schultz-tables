// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Score {
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#cuid
  id                   String           @id @default(cuid())
  durationMilliseconds Int
  userId               String
  startTime            DateTime
  sequence             UserSelection @relation(fields: [sequenceId], references: [id])
  sequenceId           String
  tableLayout          TableLayout   @relation(fields: [tableLayoutId], references: [id])
  tableLayoutId        String
  tableType            TableType     @relation(fields: [tableTypeId], references: [id])
  tableTypeId          String
}

model UserSelection {
  id    String     @id @default(cuid())
  Score Score[]
}

model TableLayout {
  id    String     @id @default(cuid())
  Score Score[]
}

model TableType {
  id    String     @id @default(cuid())
  Score Score[]
}
